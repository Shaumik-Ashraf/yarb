<div id="<%= dom_id post %>" class="container-fluid border rounded shadow mb-3 p-lg-5 p-3" style="height:100%;min-height:max-content;width:100%;max-width:100vw;">
  <h3 class="row"><%= post.title %></h3>

  <div class="row">
    <p class="text-muted">
      Authored <%= post.created_at.strftime('%r %x') %> by <%= post.user.name %> | <%= link_to 'See more', post, class: 'text-success' %>
    </p>
  </div>

  <div class="row">
    <%= post.body %>
  </div>
</div>
